@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-controller="Benchmarks" asp-action="Add" class="btn btn-default">Create new benchmark</a>
    }
    else
    {
        <a data-toggle="modal" data-target="#authenticateModal" href="#" class="btn btn-default">Create new benchmark</a>
    }

    <a asp-controller="Benchmarks" asp-action="Index" class="btn btn-default">Show benchmarks</a>
</div>