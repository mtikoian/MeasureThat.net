@using System.Threading.Tasks
@using MeasureThat.Net.Logic.Web
@using MeasureThat.Net.Models
@using Microsoft.AspNetCore.Identity
@model IEnumerable<MeasureThat.Net.Models.NewBenchmarkModel>

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Your benchmarks";
}

<div class="page-header">
    <h1>Your benchmarks</h1>
</div>

<table class="table table-striped">
@foreach (var b in Model)
{
<tr>
    <td>@b.BenchmarkName</td>
    <td><a asp-action="Show" asp-route-id="@b.Id" asp-route-name="@SeoFriendlyStringConverter.Convert(b.BenchmarkName)">Show</a></td>    
</tr>
}
</table>

@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Benchmarks" asp-action="Add" class="btn btn-default">Create new benchmark</a>
}
else
{
    <a data-toggle="modal" data-target="#authenticateModal" href="#" class="btn btn-default">Create new benchmark</a>
}
