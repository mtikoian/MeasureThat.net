@using System.Threading.Tasks
@using Humanizer
@using MeasureThat.Net.Logic.Web
@using MeasureThat.Net.Models
@using Microsoft.AspNetCore.Identity
@model IEnumerable<MeasureThat.Net.Models.NewBenchmarkModel>

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Your benchmarks";
}

<div class="page-header">
    <h1>Your benchmarks</h1>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Benchmark name</th>
        <th>Description</th>
        <th>When Created</th>
    </tr>
    </thead>
    @foreach (var b in Model)
    {
        <tr>
            <td>
                <a asp-action="Show" asp-route-id="@b.Id" asp-route-name="@SeoFriendlyStringConverter.Convert(b.BenchmarkName)">@b.BenchmarkName</a>
            </td>
            <td>@b.Description</td>
            <td>@b.WhenCreated.Humanize()</td>
        </tr>
    }
</table>

@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Benchmarks" asp-action="Add" class="btn btn-default">Create new benchmark</a>
}
else
{
    <a data-toggle="modal" data-target="#authenticateModal" href="#" class="btn btn-default">Create new benchmark</a>
}
